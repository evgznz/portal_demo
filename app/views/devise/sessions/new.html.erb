<h2>Войдите под логином и паролем</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: {class:"form-control col-xl-5", autocomplete: "email" }, label: "Логин (email)" %>
    <%= f.input :password,                 required: false,
                input_html: { class: "form-control col-xl-5 ",autocomplete: "current-password" },label: "Пароль" %>
    <%= f.input :remember_me, as: :boolean ,label: " Запомнить  " if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Войти" ,class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
